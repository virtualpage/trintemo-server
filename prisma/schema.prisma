// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Convidado {
  id              Int      @id @default(autoincrement())
  nome            String
  telefone        String?
  message         String?
  presenca        Boolean?
  bebidaAlcoolica Boolean?
  step            Int      @default(0)

  @@map("convidados")
}
